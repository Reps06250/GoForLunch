<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.goforlunch.restaurants.mapview.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map">
    <action
        android:id="@+id/map_to_details"
        app:destination="@id/fragment_restaurant_view" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.goforlunch.restaurants.listview.ListViewFragment"
        android:label="@string/title_list"
        tools:layout="@layout/fragment_listview">
        <action
            android:id="@+id/list_to_details"
            app:destination="@id/fragment_restaurant_view" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.goforlunch.users.UserListFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_user_list" >
    </fragment>

    <fragment
        android:id="@+id/fragment_restaurant_view"
        android:name="com.example.goforlunch.restaurants.details.RestaurantView"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_user_list" >
    </fragment>

</navigation>

